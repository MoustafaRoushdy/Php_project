
    IF NOT EXISTS(SELECT * FROM sys.databases WHERE name = 'nice')
  BEGIN
    CREATE DATABASE [nice]


    END
    GO
       USE [nice]
    GO

IF NOT EXISTS (SELECT * FROM sysobjects WHERE name='Users' and xtype='U')
BEGIN
    CREATE TABLE Users (
        Id INT PRIMARY KEY IDENTITY (1, 1),
        Email VARCHAR(100),
        Password VARCHAR(100)
    )
END

